<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro_producto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#D8C2FAF5"
    tools:context=".RegistroProductoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE PRODUCTO"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/campoCodigoBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código de Barras:" />

    <Button
        android:id="@+id/buttonSCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Escanear código" />

    <EditText
        android:id="@+id/campo_id_nombre_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Producto:" />

    <EditText
        android:id="@+id/campo_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad:" />

    <EditText
        android:id="@+id/campo_cantidad_minima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad Mínima:" />

    <EditText
        android:id="@+id/campo_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio:" />

    <EditText
        android:id="@+id/campo_detalle_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalle de Producto:" />

    <Spinner
        android:id="@+id/comboUsuarioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnRegistroProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:background="#C9F4F7F8"
        android:text="Registrar Producto" />

</LinearLayout>
